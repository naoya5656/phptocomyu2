<div class="container">
  <div class="row">
    <div class="col-12 col-md-7 mx-auto mt-3">
      <h4 class="py-4 border-bottom">通報</h4>
      <%= render 'layouts/error_messages', obj: @report %>
      通報するユーザー：<%= @customer.name %>
     
      <%= form_with model:[@customer, @report] do |f| %>
  <div class="form-group mt-3">
    <%= f.label :"通報理由" %>
    
      <%= f.text_area :reason, rows:'3', class:"form-control" %>
    
  </div>
  <div class="form-group mt-3">
    <%= f.label :"通報対象の情報" %>
   
    　<%= f.text_area :url, rows:'3',placeholder: "通報内容が確認できる投稿のURL、投稿名、投稿日時など", class:"form-control" %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :"通報対象が確認できるスクリーンショット" %>
    <div>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <%= f.submit "通報する", class: "btn btn-sm btn-danger mt-3" %>
<% end %>