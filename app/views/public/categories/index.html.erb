<div class="container">
  <div class="row">
    <div class="col mt-5 border-bottom">
      <h3>カテゴリー</h3>
    </div>
  </div>
  <div class="row">
    <% @categories.each do |category| %>
    <div class="col-sm-3 mt-3">
      <div class="card mx-auto shadow">
        <%= link_to category_path(category) do %>
        <%= image_tag category.get_image, width: '100%', height: '190px' %>
        <% end %>
        <div class="card-body">
          <div>
            <h5><strong><%= category.name %></strong></h5>
            投稿数: <%= category.photos.count %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>