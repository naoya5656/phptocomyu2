<div class="container">
  <div class="row">
    <div class="col-12 col-md-5 mx-auto px-0 mt-5 text-center shadow-lg">

      <h4 class="bg-light py-4">ログイン</h4>
      <div class="form-body p-4">
        <%= form_with model: @customer, url: customer_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
                <%= f.text_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
            
             <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
                <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class:"form-control" %>
            </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :"ログイン情報を保存" %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-info mb-2" %>
          </div>
        <% end %>
         <strong>まだ登録がお済みでない方</strong><br>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
