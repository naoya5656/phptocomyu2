<div class="container">
  <div class="row">
    <div class="col-12 col-md-7 mx-auto mt-3">
      <h4 class="py-4 border-bottom">新規投稿</h4>
      <%= render 'layouts/error_messages', obj: @photo %>
      <%= form_with model:@photo do |f| %>
      <div class="form-group mt-3">
        <%= f.label :"写真をアップロード" %>
        <div>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group mt-3">
        <%= f.label :name, "写真タイトル" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group mt-3">
        <div><%= f.label :body, "写真の本文" %></div>
        <div><%= f.text_area :body, class:"form-control" %></div>
      </div>
      <%= f.label :category, "カテゴリ" %><br>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
        <%= category.label do %>
        <div class="mr-3">
          <%=category.check_box %>
          <%=category.text %>
        </div>
        <% end %>
      <% end %>
      <br>
      <%= f.submit '投稿する', class:"btn btn-primary mt-3" %>
      <% end %>

    </div>
  </div>
</div>