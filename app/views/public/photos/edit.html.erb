<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-5">
      <%= form_with model: @photo do |f| %>
      <%= render 'layouts/error_messages', obj: @photo %>
      <div class="form-group">
        <%= f.label :name, "写真タイトル" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div>
          <%= f.label :body, "写真の本文" %>
        </div>
        <div>
          <%= f.text_area :body, class:"form-control" %>
        </div>
      </div>
      <%= f.label :category, "カテゴリ" %><br>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
        <%= category.label do %>
        <div class="mr-3">
          <%=category.check_box %>
          <%=category.text %>
        </div>
        <% end %>
      <% end %>
      <br>
      <%= f.submit '変更する', class:"btn btn-success" %>
      <% end %>

    </div>
  </div>
</div>