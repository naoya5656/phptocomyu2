<div class="main-visual">
  <%= video_tag("/assets/videos/3475_1280x720.mp4", width: '100%', autoplay: :true, loop: :true, muted: :true, class: 'video-content') %>
  <h3 class="visual-text">写真でつながるコミュニティサイトです。<br>
      投稿される場合は会員登録をお願い致します。
  </h3>
</div>
<div class="container">
  <div class="row border-bottom mt-4">
    <h3>新着投稿</h3>
  </div> 
  <div class="row">
    <% @photos.first(4).each do |photo| %>
    <div class="col-sm-3 mt-3">
      <div class="card mx-auto shadow">
        <%= image_tag photo.image, width: '100%', height: '190px' %>
        <div class="card-body">
          <div class='review-text-sentence'>
            <% if photo.name.length >= 9 %>
              <h4><%= photo.name.slice(0,8) %>...</h4>
            <% else %>
              <h4><%= photo.name %></h4>
            <% end %>
          </div>
          <div class="border-bottom">
            <h5><%= photo.customer.name %></h5>
          </div>
          <div class="row">
            <div class="col-4">
              <i class="far fa-heart"></i>
                <%= photo.favorites.count %>
            </div>
            <div class="col-4">
              <i class="far fa-comment"></i>
              <%= photo.photo_comments.count %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class= "col text-right mt-4">
    <% if customer_signed_in? %>
      <%= link_to "もっと見る>>", photos_path %>
    <% else %>
      <%= link_to "もっと見る>>", new_customer_session_path %>
    <% end %>
  </div>
</div>