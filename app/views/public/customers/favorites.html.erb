<div class ="container">
  <div class="row">
    <div class="col mt-3">
      <div class="row border-bottom">
        <div class="col-1 mb-3">
          <%= image_tag @customer.get_profile_image(90,90), class: "rounded-circle border border-secondary" %>
        </div>
        <div class="col-10 mb-3 ml-3">
          <div>
            <h2><%= @customer.name %></h2>
            <%= link_to "お気に入り", favorites_customer_path(@customer), class: "btn btn-danger btn-sm btn-sm" %>
          </div>
          
          <%= link_to customer_followings_path(@customer) do %>
          <strong><%= @customer.followings.count %></strong>フォロー
          <% end %>

          <%= link_to customer_followers_path(@customer) do %>
          <strong class="ml-3"><%= @customer.followers.count %></strong>フォロワー
          <% end %>
          <% if @customer == current_customer %>
            <%= link_to "プロフィール編集", edit_customer_path(current_customer), class: "btn btn-success btn-sm ml-3" %>
          <% end %>

         <% if @customer == current_customer %>
          <% else %>
          <%= render 'public/follows/follow', customer: @customer %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <% @favorites_photos.each do |photo|%>
        <div class="col-sm-3 mt-3">
          <div class="card mx-auto shadow">
           <%= link_to photo_path(photo) do %>
             <%= image_tag photo.image, width: '100%', height: '190px' %>
           <% end %>
           <div class="card-body">
              <%= link_to photo_path(photo) do %>
                <h4><%= photo.name %></h4>
              <% end %>
             <div class="border-bottom">
               <h5><%= photo.customer.name %></h5>
             </div>
             <div class="row">
               <div class="col-3">
                 <div id ="favorites<%= photo.id %>">
                   <%= render 'public/favorites/favorites', photo: photo  %>
                 </div>
               </div>
               <div class="col-3">
                <i class="fa-regular fa-comment"></i>
                <%= photo.photo_comments.count %>
               </div>
             </div>
           </div>
          </div>
        </div>
      <% end %>