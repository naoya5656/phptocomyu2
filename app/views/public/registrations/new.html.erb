<div class="container">
  <div class="row">
    <div class="col-5 mx-auto px-0 mt-5 text-center shadow-lg">
      <h4 class="bg-light py-4">新規会員登録</h4>
      
      <div class="form-body p-4">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-user"></i>
              </span>
            </div>
              <%= f.text_field :name, placeholder: "ニックネーム", autofocus: true, autocomplete: "name", class:"form-control" %>
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
              <%= f.text_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-lock"></i>
              </span>
            </div>
              <%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class:"form-control" %>
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
               <i class="fas fa-lock"></i>
              </span>
            </div>
              <%= f.password_field :password_confirmation, placeholder: "パスワード確認", autocomplete: "new-password", class:"form-control" %>
          </div>
        
          
          
          <div class="actions">
            <%= f.submit "登録", class: "btn btn-info mb-2" %>
          </div>
        <% end %>
        
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
