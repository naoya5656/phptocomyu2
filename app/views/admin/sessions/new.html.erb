<div class="text-center">
<%= render partial: 'layouts/flash' %>
</div>
<div class="container">
  <div class="row">
    <div class="col-5 mx-auto px-0 mt-5 text-center">
        <h2>管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3 mt-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
                <%= f.text_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
        
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
                <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class:"form-control" %>
            </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :"ログイン情報を保存" %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-info mb-2" %>
          </div>
        <% end %>
        
        <%= render "admin/shared/links" %>
