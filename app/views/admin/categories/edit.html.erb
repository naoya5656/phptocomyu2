<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-3">
      <h4 class="py-4 border-bottom mb-3">カテゴリー編集</h4>
      <%= form_with model: [:admin, @category] do |f| %>
      <div class="form-group mb-3">
        <%= f.label :"カテゴリーイメージ" %>
        <div>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, "カテゴリー名" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <%= f.submit '変更する', class:"btn btn-success" %>
      <% end %>

    </div>
  </div>
</div>