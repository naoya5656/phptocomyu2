<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.label :"カテゴリーイメージ" %>
        <div>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, "カテゴリー名" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <%= f.submit '変更する' %>
      <% end %>

    </div>
  </div>
</div>