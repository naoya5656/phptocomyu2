<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'layouts/error_messages', obj: @category %>
      <%= form_with model:[:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.label :"カテゴリーイメージ" %>
        <div>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, "カテゴリー名" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <%= f.submit '追加する' %>
        <% end %>
      </div>
    </div>
  </div>
</div>