<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-3">
      <h4 class="py-4 border-bottom">カテゴリー作成</h4>
      <%= render 'layouts/error_messages', obj: @category %>
      <%= form_with model:[:admin, @category] do |f| %>
      <div class="form-group mt-3">
        <%= f.label :"カテゴリーイメージ" %>
        <div>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group mt-3">
        <%= f.label :name, "カテゴリー名" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <%= f.submit '追加する', class: "btn btn-info mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>