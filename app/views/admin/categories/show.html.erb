<div class ="container">
  <div class="row">
    <% @photos.each do |photo| %>
    <div class="col-sm-3 mt-3">
      <div class="card mx-auto shadow">
        <%= link_to photo_path(photo) do %>
        <%= image_tag photo.get_image, width: '100%', height: '190px' %>
        <% end %>
        <div class="card-body">
          <h4><%= photo.name %></h4>
          <%= render 'public/favorites/favorites', photo: photo  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
