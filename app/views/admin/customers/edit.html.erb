<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @customer do |f| %>
      <div class="form-group">
        <%= f.label :name, "ニックネーム" %>
        <div>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %>
      </div>
      <div>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <%= f.submit "変更する" %>
      <% end %>
    </div>
  </div>
</div>