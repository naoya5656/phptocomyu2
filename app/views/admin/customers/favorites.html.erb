<div class ="container">
  <div class="row">
    <div class="col mt-3">
      <div class="row border-bottom">
        <%= render 'admin/customers/customer_profile', customer: @customer %>
      </div>
      <div class="row">
        <% if @favorites_photos.present? %>
        <% @favorites_photos.each do |photo|%>
        <div class="col-sm-3 mt-3">
          <div class="card mx-auto shadow">
            <%= link_to admin_photo_path(photo) do %>
              <%= image_tag photo.image, width: '100%', height: '190px' %>
            <% end %>
            <div class="card-body">
              <%= link_to admin_photo_path(photo) do %>
                <div class='review-text-sentence'>
                  <% if photo.name.length >= 9 %>
                    <h4><%= photo.name.slice(0,8) %>...</h4>
                  <% else %>
                    <h4><%= photo.name %></h4>
                  <% end %>
                </div>
              <% end %>
              <div class="border-bottom">
                <h5><%= photo.customer.name %></h5>
              </div>
              <div class="row">
                <div class="col-3">
                  <i class="far fa-heart"></i>
                  <%= photo.favorites.count %>
                </div>
                  <div class="col-3">
                  <i class="far fa-comment"></i>
                  <%= photo.photo_comments.count %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% else %>
        <p>いいねした投稿はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
  