<div class="col-1 mb-3">
    <%= image_tag customer.get_profile_image(90,90), class: "rounded-circle border border-secondary" %>
</div>

<div class="col-10 mb-3 ml-3">
  <div class="mb-2">
    <h2><%= customer.name %></h2>
    <%= link_to "お気に入り", favorites_customer_path(customer), class: "btn btn-danger btn-sm" %>
  </div>
  <%= link_to customer_followings_path(customer) do %>
    <strong><%= customer.followings.count %></strong>フォロー
  <% end %>
  <%= link_to customer_followers_path(customer) do %>
    <strong class="ml-3"><%= customer.followers.count %></strong>フォロワー
  <% end %>
  
    <%= link_to "プロフィール編集", edit_admin_customer_path(customer), class: "btn btn-success btn-sm ml-3" %>
</div>