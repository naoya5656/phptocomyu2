<div class="container">
  <div class="row">
    <div class="col mt-3">
      <div class="row border-bottom">
        <div class="col">
          <h3>検索</h3>
        </div>
      </div>
      <!--検索対象モデルがcustomerの時 -->
      <% if @range == "ユーザー名" %>
      <div class="row">
        <% @customers.each do |customer| %>
        <div class="col-sm-6 mt-3">
          <div class="card-body mx-auto shadow-sm" style="background-color:#EEEEEE;">
            <div class="row">
              <div class="col-2">
                <%= link_to admin_customer_path(customer) do %>
                  <%= image_tag customer.get_profile_image(70,70), class: "rounded-circle border border-secondary" %>
                <% end %>
              </div>
              <div class="col-9 ml-3">
                <%= link_to admin_customer_path(customer) do %>
                  <h4><%= customer.name %></h4>
                <% end %>
                <strong><%= customer.followings.count %></strong>フォロー
                <strong class="ml-3"><%= customer.followers.count %></strong>フォロワー
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% else %>
        <!--検索対象モデルがcustomerではない時( 検索対象モデルがphotoの時) -->
      <div class="row">
        <%= render 'admin/photos/index', photos: @photos %>
      </div>
      <% end %>
    </div>
  </div>
</div>
