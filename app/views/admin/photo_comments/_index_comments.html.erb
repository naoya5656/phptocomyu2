<% photo.photo_comments.each do |photo_comment| %>
<div class="row bg-white border m-4 pt-3 pb-3 pr-3">
  <div class="col-1">
    <%= link_to admin_customer_path(photo_comment.customer) do %>
      <%= image_tag photo_comment.customer.get_profile_image(70,70), class: "rounded-circle border border-secondary" %><br>
    <% end %>
  </div>
  <div class="col-11">
    <%= link_to admin_customer_path(photo_comment.customer) do %>
    <strong style="margin-right : 10px"><%= photo_comment.customer.name %></strong>
    <% end %>
    <%= photo_comment.created_at.strftime('%Y/%m/%d %H:%M') %><br>
    <div style="margin-top : 10px">
      <%= photo_comment.photo_comment %>
    </div>
    <div class="text-right">
      <%= link_to "削除", photo_photo_comment_path(photo, photo_comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger pull-right" %>
    </div>
  </div>
</div>
<% end %>